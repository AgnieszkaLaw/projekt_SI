{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}</h1>
    {% if contact is defined and contact|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ contact.id }}</dd>
            <dt>{{ 'label.name'|trans }}</dt>
            <dd>{{ contact.name }}</dd>
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ contact.email }}</dd>
            <dt>{{ 'label.phoneNumber'|trans }}</dt>
            <dd>{{  contact.phoneNumber }}</dd>
            <dt>{{ 'label.note'|trans }}</dt>
            <dd>{{ contact.note|markdown_to_html }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>{% for tag in contact.tags %}
                    {{ tag.name }}{% if not loop.last %},{% endif %}
                {% endfor %}</dd>
            <dt>{{ 'label.author'|trans }}</dt>
            <dd>{{  contact.author }}</dd>
        </dl>
        <p>
            <a class="btn btn-outline-success" href="{{ url('contact_edit', {id: contact.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            <a class="btn btn-outline-danger" href="{{ url('contact_delete', {id: contact.id}) }}" title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ url('contact_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}